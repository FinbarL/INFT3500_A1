@model ProductViewModel

<h3 class="my-5">
    @Model.Name
</h3>

<div class="row gx-5">
    <div class="col-7">
        <p>Description: @Model.Description</p>
        <p>Genre: @Model.Genre.Name</p>
        <p>Sub Genre: @Model.SubGenre</p>
        <p>Published: @Model.Published</p>
        <p>Quantity: @Model.Quantity</p>
        <p>Price: @Model.Price</p>
        <div class="addToCart">
            <a asp-controller="Cart"
               asp-action="AddToCart"
               asp-route-id="@Model.ProductId"
               class="btn btn-success">Add To Cart</a>
        </div>
    </div>
</div>